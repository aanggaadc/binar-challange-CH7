<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Assets/css/dashboard-edit.css">

    <title> <%= pageTitle %> </title>
  </head>
  <body> 
    <div class="d-lg-flex half">
      <div class="bg order-1 order-md-2" style="background-image: url('../Assets/images/editDashboard-background.jpg');background-position-x: 385px;""></div>
      <div class="contents order-2 order-md-1" style="background-color: rgb(204, 204, 204);">
  
        <div class="container">
          <div class="row align-items-center justify-content-center" style="background-color: rgb(204, 204, 204);">
            <div class="col-md-7 py-5">
              <h1 style="font-weight: bold;">EDIT USER DATA</h1>
              <hr style="width:100%;height: 2px;">
              <form action="/dashboard/edit?id=<%= data.uuid %>" method="post">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group first">
                      <label for="fname">Username</label>
                      <input type="text" class="form-control" value="<%= data.username %>" name="username">
                    </div>    
                  </div>
                  <div class="col-md-6">
                    <div class="form-group first">
                      <label for="email">Email</label>
                      <input type="email" class="form-control" value="<%= data.email %>" name="email">
                    </div>    
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group first">
                      <label for="fname">Full Name</label>
                      <input type="text" class="form-control" value="<%= data.user_game_biodata.name %>" name="name">
                    </div>    
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group first">
                      <label for="hooby">Hobby</label>
                      <input type="text" class="form-control" value="<%= data.user_game_biodata.hobby %>" name="hobby">
                    </div>    
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group first">
                      <label for="address">Address</label>
                      <input type="text" class="form-control" value="<%= data.user_game_biodata.address %>"  name="address">
                    </div>    
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group first">
                      <label for="city">City</label>
                      <input type="text" class="form-control" value="<%= data.user_game_biodata.city %>" name="city">
                    </div>    
                  </div>
                  <div class="col-md-6">
                    <div class="form-group first">
                      <label for="birth">Date of Birth</label>
                      <input type="date" class="form-control" value="<%= data.user_game_biodata.date_of_birth %>" name="date_of_birth">
                    </div>    
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">                
                    <div class="form-group last mb-3">
                      <label for="win">Win</label>
                      <input type="text" class="form-control" value="<%= data.user_game_history.win %>" name="win">
                    </div>
                  </div>
                  <div class="col-md-6">
                
                    <div class="form-group last mb-3">
                      <label for="lose">Lose</label>
                      <input type="text" class="form-control" value="<%= data.user_game_history.lose %>" name="lose">
                    </div>
                  </div>
                </div>             
              
                  <button type="submit" class="btn btn-warning btn-lg">Edit Data</button>

              </form>
            </div>
          </div>
        </div>
      </div>
  
      
    </div>
  </body>
</html>